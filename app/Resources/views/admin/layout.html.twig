<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>{{ site.name }} | {{ title }}</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <link rel="stylesheet" href="{{ paths.themes }}/admin-theme/assets/css/bootstrap.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="{{ paths.themes }}/admin-theme/assets/css/font-awesome.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="{{ paths.themes }}/admin-theme/assets/css/ionicons.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="{{ paths.themes }}/admin-theme/assets/css/AdminLTE.min.css">
  
  <link rel="stylesheet" href="{{ paths.themes }}/admin-theme/assets/css/skin-red.min.css">

  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->

  <!-- Google Font -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition skin-red sidebar-mini fixed">
<div class="wrapper">

  <!-- Main Header -->
  <header class="main-header">

    <!-- Logo -->
    <a href="{{ paths.admin }}" class="logo">
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini"><b>A</b>T</span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg">{{ site.name }}</span>
    </a>

    <!-- Header Navbar -->
    <nav class="navbar navbar-static-top" role="navigation">
      <!-- Sidebar toggle button-->
      <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>
      <!-- Navbar Right Menu -->
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <!-- User Account Menu -->
          <li class="dropdown user user-menu">
            <!-- Menu Toggle Button -->
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <!-- The user image in the navbar-->
              <img src="{{ paths.uploads }}/test.jpg" class="user-image" alt="User Image">
              <!-- hidden-xs hides the username on small devices so only the image appears. -->
              <span class="hidden-xs">{{ session.username }}</span>
            </a>
            <ul class="dropdown-menu">
              <!-- The user image in the menu -->
              <li class="user-header">
                <img src="{{ paths.uploads }}/test.jpg" class="img-circle" alt="User Image">

                <p>{{ session.username }}</p>
              </li>
              <!-- Menu Footer-->
              <li class="user-footer">
                <div class="pull-left">
                  <a href="{{ paths.admin }}/settings" class="btn btn-default btn-flat">Paramètres</a>
                </div>
                <div class="pull-right">
                  <a href="{{ paths.admin }}/logout/{{ session.csrf }}" class="btn btn-default btn-flat">Déconnexion</a>
                </div>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>
  </header>
  <!-- Left side column. contains the logo and sidebar -->
  <aside class="main-sidebar">

    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">

      <!-- Sidebar Menu -->
      <ul class="sidebar-menu" data-widget="tree">
        <li class="header">Navigation</li>
        <!-- Optionally, you can add icons to the links -->
        <li {% if page == 'dashboard' %}class="active"{% endif %}><a href="{{ paths.admin }}"><i class="fa fa-dashboard"></i> <span>Dashboard</span></a></li>
        
        <li class="treeview {% if page == 'articles' %}active{% endif %}">
          <a href="#"><i class="fa fa-file-text"></i> <span>Articles</span>
            <span class="pull-right-container">
                <i class="fa fa-angle-left pull-right"></i>
              </span>
          </a>
          <ul class="treeview-menu">
            <li><a href="{{ paths.admin }}/create/article">Ajouter un article</a></li>
            <li><a href="{{ paths.admin }}/manage/articles">Gérer les articles</a></li>
          </ul>
        </li>
        
        <li class="treeview {% if page == 'categories' %}active{% endif %}">
          <a href="#"><i class="fa fa-tags"></i> <span>Categories</span>
            <span class="pull-right-container">
                <i class="fa fa-angle-left pull-right"></i>
              </span>
          </a>
          <ul class="treeview-menu">
            <li><a href="{{ paths.admin }}/create/category">Ajouter une categorie</a></li>
            <li><a href="{{ paths.admin }}/manage/categories">Gérer les categories</a></li>
          </ul>
        </li>
        
        <li {% if page == 'uploads' %}class="active"{% endif %}><a href="{{ paths.admin }}/manage/uploads"><i class="fa fa-upload"></i> <span>Fichiers</span></a></li>
        
        <li class="treeview {% if page == 'users' %}active{% endif %}">
          <a href="#"><i class="fa fa-users"></i> <span>Utilisateurs</span>
            <span class="pull-right-container">
                <i class="fa fa-angle-left pull-right"></i>
              </span>
          </a>
          <ul class="treeview-menu">
            <li><a href="{{ paths.admin }}/create/user">Ajouter un utilisateur</a></li>
            <li><a href="{{ paths.admin }}/manage/users">Gérer les utilisateurs</a></li>
          </ul>
        </li>
        
        <li class="treeview {% if page == 'configuration' %}active{% endif %}">
          <a href="#"><i class="fa fa-cog"></i> <span>Configuration</span>
            <span class="pull-right-container">
                <i class="fa fa-angle-left pull-right"></i>
              </span>
          </a>
          <ul class="treeview-menu">
            <li><a href="{{ paths.admin }}/configuration">Configuration générale</a></li>
            <li><a href="{{ paths.admin }}/configuration/appearance">Apparence</a></li>
            <li><a href="{{ paths.admin }}/configuration/plugins">Plugins</a></li>
          </ul>
        </li>
        
        <li><a href="{{ paths.home }}"><i class="fa fa-desktop"></i> <span>Voir le site</span></a></li>
      </ul>
      <!-- /.sidebar-menu -->
    </section>
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>{{ title }}</h1>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
    {% if advert %}
    <div class="callout callout-{{ advert.type }}">
        <p>{{ advert.message }}</p>
    </div>
    {% endif %}
     
      {% block body %}
      {% endblock %}

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <!-- Main Footer -->
  <footer class="main-footer">
    <!-- To the right -->
    <div class="pull-right hidden-xs">
      Created with <a href="https://github.com/SundownDEV/DaimyoCMS">DaimyoCMS</a>
    </div>
    <!-- Default to the left -->
    All rights reserved.
  </footer>
</div>
<!-- ./wrapper -->

<!-- jQuery 3 -->
<script src="{{ paths.themes }}/admin-theme/assets/js/jquery.min.js"></script>
<!-- Bootstrap 3.3.7 -->
<script src="{{ paths.themes }}/admin-theme/assets/js/bootstrap.min.js"></script>
<!-- AdminLTE App -->
<script src="{{ paths.themes }}/admin-theme/assets/js/adminlte.min.js"></script>
</body>
</html>