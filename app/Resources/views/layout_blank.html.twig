<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="{{ site.description }}">
    <meta name="tags" content="{{ site.tags }}">
    <link rel="icon" href="{{ path.images }}/favicon.ico">

    <title>{{ site.name }} | {{ title }}</title>

    <!-- Bootstrap core CSS -->
    <link href="{{ path.themes }}/default-theme/assets/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="{{ path.themes }}/default-theme/assets/css/blog.css" rel="stylesheet">
  </head>

  <body>

  {% block sidebar %}
    <div class="blog-masthead">
      <div class="container">
        <nav class="nav blog-nav">
          <a class="nav-link {% if page == 'home' %}active{% endif %}" href="{{ path.home }}">Home</a>
          <a class="nav-link {% if page == 'blog' %}active{% endif %}" href="{{ path.blog }}">Blog</a>
          <a class="nav-link {% if page == 'about' %}active{% endif %}" href="{{ path.about }}">About</a>
          <a class="nav-link {% if page == 'contact' %}active{% endif %}" href="{{ path.contact }}">Contact</a>
        </nav>
      </div>
    </div>
  {% endblock sidebar %}

    <div class="blog-header">
      <div class="container">
        <h1 class="blog-title">{{ site.name }}</h1>
        <p class="lead blog-description">{{ site.description }}</p>
      </div>
    </div>

    {% block body %}
		{% endblock %}

    <footer class="blog-footer">
      <p>Powered by <a href="https://github.com/SundownDEV/DaimyoCMS">DaimyoCMS</a>.</p>
      <p>
        <a href="#">Back to top</a>
      </p>
    </footer>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
    <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery.min.js"><\/script>')</script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="{{ path.assets }}/js/bootstrap.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="{{ path.assets }}/js/ie10-viewport-bug-workaround.js"></script>
  </body>
</html>