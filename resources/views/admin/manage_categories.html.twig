{% extends 'admin/layout.html.twig' %}

{% block body %}
    <div class="box">
            <div class="box-body">
              <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap"><div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div><div class="row"><div class="col-sm-12">
               <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                <thead>
                <tr role="row">
                    <th>Name</th>
                    <th>Description</th>
                    <th>Date created</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                <tr role="row" class="even">
                  <td><a href="{{ paths.admin }}/manage/category/{{ category.slug }}">{{ category.name }}</a></td>
                  <td>{{ category.description|slice(0,80) }}</td>
                  <td>{{ category.createdDate|date('d/m/Y') }} at {{ category.createdDate|date('h:m') }}</td>
                  <td><a href="{{ paths.admin }}/delete/category/{{ category.hash_id }}/{{ session.csrf }}" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete</a></td>
                </tr>
                {% endfor %}
                </tbody>
              </table>
                      </div>
                  </div>
              </div>
            <!-- /.box-body -->
          </div>
{% endblock %}