{% extends 'admin/layout.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-md-12">
          <div class="box box-warning">
            <div class="box-header with-border">
              <h3 class="box-title">General settings</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" action="{{ paths.admin }}/settings/post/general" method="post" enctype="multipart/form-data">
              <div class="box-body">
                <div class="form-group">
                  <label for="username">Username</label>
                  <input type="text" name="username" class="form-control" id="username" placeholder="Entrez un nom d'utilisateur" value="{% if POST.username %}{{ POST.username }}{% else %}{{ session.username }}{% endif %}">
                </div>
                <div class="form-group">
                  <label for="desc">Description</label>
                  <textarea name="desc" id="desc" rows="3" class="form-control" placeholder="Tell us a little more about you">{{ user.description }}</textarea>
                </div>
                <div class="form-group">
                  <label for="avatar">Avatar</label>
                  <input type="file" name="avatar" id="avatar" class="form-control">

                  <p class="help-block">Choose a .jpg or .png file of 10MB max size.</p>
                </div>
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" name="changeUsername" class="btn btn-primary">Save</button>
              </div>
            </form>
          </div>
          <!-- /.box -->
          
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Email address</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" method="post" action="{{ paths.admin }}/settings/post/email">
              <div class="box-body">
                <div class="form-group">
                  <label for="actualemail">Actual email address</label>
                  <input type="email" name="actualemail" class="form-control" id="actualemail" placeholder="contact@example.com" value="{% if POST.newemail %}{{ POST.newemail }}{% else %}{{ session.email }}{% endif %}" disabled="">
                </div>
                <div class="form-group">
                  <label for="newemail">New email address</label>
                  <input type="email" name="newemail" class="form-control" id="newemail" placeholder="yourmail@example.com" value="{% if POST.newemail %}{{ POST.newemail }}{% endif %}">
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" name="password" class="form-control" id="password" placeholder="Password">
                </div>
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" name="changeEmail" class="btn btn-primary">Save</button>
              </div>
            </form>
          </div>
          <!-- /.box -->
          
          <div class="box box-warning">
            <div class="box-header with-border">
              <h3 class="box-title">Edit the password</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" method="post" action="{{ paths.admin }}/settings/post/password">
              <div class="box-body">
                <div class="form-group">
                  <label for="actualpassword">Actual password</label>
                  <input type="password" name="actualpassword" class="form-control" id="actualpassword" placeholder="Enter your actual password">
                </div>
                <div class="form-group">
                  <label for="newpassword">Enter your new password</label>
                  <input type="password" name="newpassword" class="form-control" id="newpassword" placeholder="Enter your new password">
                </div>
                <div class="form-group">
                  <label for="repeatpassword">Enter your new password again</label>
                  <input type="password" name="repeatpassword" class="form-control" id="repeatpassword" placeholder="Enter your new password again">
                </div>
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" name="changePassword" class="btn btn-primary">Save</button>
              </div>
            </form>
          </div>
          <!-- /.box -->
        </div>
</div>
{% endblock %}