{% extends "layout.html.twig" %}
{% set page = 'home' %}

{% block body %}
    {% for article in articles|slice(0, 1) %}
    <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark" style="background:url('{{ paths.uploads }}/{{ article.image_url }}');">
        <div class="col-md-6 px-0">
            <h1 class="display-4 font-italic"><a href="{{ paths.article }}/{{ article.slug }}">{{ article.title }}</a></h1>
            <p class="lead my-3">{{ article.content|slice(0, 140) }}{% if article.content|length >= 140 %} [...]{% endif %}</p>
            <p class="lead mb-0"><a href="{{ paths.article }}/{{ article.slug }}" class="text-white font-weight-bold">Continue reading...</a></p>
        </div>
    </div>
    {% endfor %}

    <main role="main" class="container">
        <div class="row">
            <div class="col-md-8 blog-main">
                {% for article in articles|slice(1, articles|length) %}
                <div class="blog-post">
                    <h2 class="blog-post-title"><a href="{{ paths.article }}/{{ article.slug }}">{{ article.title }}</a></h2>
                    <p class="blog-post-meta">January 1, 2014 by <a href="{{ paths.user }}/{{ article.author }}">{{ article.author }}</a></p>

                    <p>{{ article.content|slice(0, 140) }}{% if article.content|length >= 140 %} [...]{% endif %}</p>
                </div><!-- /.blog-post -->
                {% endfor %}

                <nav class="blog-pagination text-center">
                    <a class="btn btn-outline-primary" href="#">Load more</a>
                </nav>

            </div><!-- /.blog-main -->

            {% include 'sidebar.html.twig' %}

        </div><!-- /.row -->

    </main><!-- /.container -->
{% endblock %}