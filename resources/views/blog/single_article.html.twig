{% extends "layout.html.twig" %}
{% set page = 'single_article' %}

{% block body %}
    <main role="main" class="container">
        <div class="row">
            <div class="col-md-8 blog-main">
                    <div class="blog-post">
                        <img src="{{ paths.uploads }}/{{ article.image_url }}" alt="">
                        <h2 class="blog-post-title">{{ article.title }}</h2>
                        <p class="blog-post-meta">On {{ article.publishDate|date("F jS \\a\\t g:i a") }} by <a href="{{ paths.user }}/{{ article.author.username }}">{{ article.author.username }}</a></p>

                        <p>{{ article.content|nl2br }}</p>
                    </div><!-- /.blog-post -->

                    <hr>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-body">
                                    <div>
                                        <img src="{{ paths.uploads }}/avatars/{{ article.author.hash_id }}.jpg" width="15%" style="margin-right:30px;" class="float-left rounded-circle" alt="">
                                    </div>

                                    <div>
                                        <h5 class="card-title"><a href="{{ paths.user }}/{{ article.author.username }}">{{ article.author.username }}</a></h5>
                                        <p class="card-text">{{ article.author.description }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="row comment-section">
                        <div class="col-sm-12">
                            <h3>Comments</h3>

                            <div class="alert alert-light text-center" role="alert">
                                You need to <a href="{{ paths.root }}signin" class="alert-link">sign in</a> to comment this post.
                            </div>

                            <div class="card">
                                <div class="card-body">
                                    <div>
                                        <img src="{{ paths.uploads }}/avatars/{{ article.author.hash_id }}.jpg" width="10%" style="margin-right:30px;" class="float-left rounded-circle" alt="">
                                    </div>

                                    <div>
                                        <h5 class="card-title"><a href="{{ paths.user }}/{{ article.author.username }}">{{ article.author.username }}</a> <small>on March 5th</small></h5>
                                        <p class="card-text">nice article!</p>
                                        <a href="#">Delete</a>
                                    </div>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-body">
                                    <div>
                                        <img src="{{ paths.uploads }}/avatars/{{ article.author.hash_id }}.jpg" width="10%" style="margin-right:30px;" class="float-left rounded-circle" alt="">
                                    </div>

                                    <div>
                                        <h5 class="card-title"><a href="{{ paths.user }}/{{ article.author.username }}">{{ article.author.username }}</a> <small>on March 5th</small></h5>
                                        <p class="card-text">nice article!</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </div><!-- /.blog-main -->

            {% include 'sidebar.html.twig' %}

        </div><!-- /.row -->

    </main><!-- /.container -->
{% endblock %}