{% extends '@admin/base.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">User</h1>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>FullName</th>
                <td>{{ user.fullName }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles[0] }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_manage') }}" class="btn btn-primary">Back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary">Edit this user</a>

    <hr>

    {{ include('@admin/user/_delete_form.html.twig') }}
{% endblock %}