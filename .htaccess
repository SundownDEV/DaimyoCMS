<IfModule mod_rewrite.c>
    RewriteEngine on
    
    Options -Indexes

    # set rewrite base here
    ErrorDocument 403 /DaimyoCMS/404

    <Files ~ "\.ini|\.json|\.lock|\.gitignore|\.txt|\.md|\.xml$">
	  Order allow,deny
	  Deny from all
	</Files>

	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteRule . index.php [L]
</IfModule>